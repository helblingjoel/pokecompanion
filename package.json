{
	"name": "pokemon-svelte",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "node assets/socialGenerator.js && vite build",
		"build:production": "npm run scrape && vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:integration-ui": "playwright test --ui",
		"test:unit": "vitest",
		"scrape": "npm run scrape:abilities && npm run scrape:items && npm run scrape:moves && npm run scrape:pokemon",
		"scrape:abilities": "node ./src/build/scrapers/abilities.js",
		"scrape:items": "node ./src/build/scrapers/items.js",
		"scrape:moves": "node ./src/build/scrapers/moves.js",
		"scrape:pokemon": "node ./src/build/scrapers/pokemon.js"
	},
	"devDependencies": {
		"@playwright/test": "^1.37.1",
		"@sveltejs/adapter-cloudflare": "^3.0.1",
		"@sveltejs/adapter-vercel": "^4.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/lodash-es": "^4.17.8",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.15",
		"convert-svg-to-png": "^0.6.4",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"esm": "^3.2.25",
		"lodash-es": "^4.17.21",
		"node-fetch": "^3.3.2",
		"postcss": "^8.4.28",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.3",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^5.2.2",
		"vite": "^5.0.12",
		"vitest": "^1.0.0"
	},
	"type": "module",
	"dependencies": {
		"@jill64/sentry-sveltekit-cloudflare": "^1.7.2",
		"@sentry/browser": "^7.86.0",
		"@sentry/integrations": "^7.94.1",
		"jdenticon": "^3.2.0",
		"mysql2": "^3.6.1",
		"pocketbase": "^0.18.2",
		"uuid": "^9.0.1"
	}
}
